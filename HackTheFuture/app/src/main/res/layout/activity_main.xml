<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="com.example.gebruiker.hackthefuture.MainActivity"
    android:orientation="vertical"
    android:id="@+id/main_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/caps_logo"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:text="@string/welkomVault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:layout_margin="15px"
        android:textSize="25dp"
        android:gravity="center"
        />


        <TextView
            android:text="@string/numberOfCoins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_margin="15px"
            android:textSize="25dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/nrOfCoins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_margin="15px"
            android:textSize="50dp"
            android:gravity="center"/>


    <Button
        android:id="@+id/btnCategories"
        android:text="@string/goShopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:textColor="@color/colorPrimary"
        android:backgroundTint="@color/colorAccent"/>
    <Button
        android:id="@+id/btnInventory"
        android:text="@string/goInventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:textColor="@color/colorPrimary"
        android:backgroundTint="@color/colorAccent"/>


</LinearLayout>
